<div class="space-y-4" >

    {% for post in posts %}
        {% if not post.data.draft %}
            <div class="flex mr-auto">
                <span class="flex-grow">
                    <a class="block font-semibold text-normal md:text-lg " href="{{ post.url | url }}">{{ post.data.title }}</a>
                </span>

                <span 
                    class="created-date whitespace-nowrap"
                    datetime="{{ post.data.date }}"
                >
                    {{ post.data.date | dateDisplay }}
                </span>
            </div>
        {% endif %}
    {% endfor %}
    {% if (post.length > 1) %}
        <a href="/posts">Todos los escritos</a>    
    {% endif %}
    
</div>