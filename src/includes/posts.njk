<div class="space-y-4">
    {% for post in posts %}
        {% if not post.data.draft %}
            <div class="flex mr-auto">
                <h2 class="flex-grow">
                    <a class="block" href="{{ post.url | url }}">{{ post.data.title }}</a>
                </h2>

                {# <p class="excerpt">{{ post.data.excerpt }}</p> #}

{#                 {% for tag in post.data.tags %}
                    {%- if tag !== "post" -%}
                        <a class="tag {{ tag | replace('.', '') }}" href="{{ site.baseUrl }}tag/{{ tag }}">{{ tag }}</a>
                    {%- endif -%}
                {% endfor %} #}

                <span 
                    class="block md:inline md:float-right md:pt-4 pt-2 created-date"
                    datetime="{{ post.data.date }}"
                >
                    {{ post.data.date | dateDisplay }}
                </span>
            </div>
        {% endif %}
    {% endfor %}
</div>